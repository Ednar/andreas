{% extends "base.twig" %}


{% block content %}

    <div id="infoWrapper">

        {% for libraryItem in library %}
            <p>pictureID: {{ libraryItem.pictureID }}<br>
                url: {{ libraryItem.url }}<br>
                alt: {{ libraryItem.alt }}</p>
            {% endfor %}

        <form action="index.php?add_lib_item" enctype="multipart/form-data" method="post">
            <p>Description: <input type="text" name="alt"></p>
            <input type="file" name="picture" id="picture" accept="image/*">
            <input type="submit" value="Upload file">
        </form>

    </div>

{% endblock %}